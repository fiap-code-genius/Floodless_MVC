@model Floodless_MVC.Domain.Entities.RecursoEntity

@{
    ViewData["Title"] = "Detalhes do Recurso";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Detalhes do Recurso
                    </h3>
                </div>
                <div class="card-body">
                    <div class="card mb-4">
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Nome</dt>
                                <dd class="col-sm-9">@Model.Nome</dd>

                                <dt class="col-sm-3">Tipo</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-primary">@Model.TipoRecurso</span>
                                </dd>

                                <dt class="col-sm-3">Quantidade</dt>
                                <dd class="col-sm-9">@Model.Quantidade</dd>

                                <dt class="col-sm-3">Voluntário</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Voluntario != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user me-2"></i>
                                            <span>@Model.Voluntario.Nome</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Não atribuído</span>
                                    }
                                </dd>

                                <dt class="col-sm-3">Data de Criação</dt>
                                <dd class="col-sm-9">
                                    <i class="fas fa-calendar-alt me-2"></i>
                                    @Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Voltar
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 15px;
        }
        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }
        dt {
            font-weight: 600;
            color: #6c757d;
        }
        dd {
            margin-bottom: 1rem;
        }
        .badge {
            font-size: 0.9em;
            padding: 0.5em 1em;
        }
    </style>
} 