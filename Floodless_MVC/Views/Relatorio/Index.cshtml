@{
    ViewData["Title"] = "Relatórios";
}

<div class="container-fluid py-5" style="background-color: #1a1a1a;">
    <div class="container">
        <h1 class="text-white mb-4">Relatórios e Estatísticas</h1>
        <div class="row">
            <div class="col-12">
                <div class="card bg-dark text-light border-0 shadow">
                    <div class="card-body">
                        <h2>Acompanhamento de Doações e Voluntários</h2>
                        <p class="lead">
                            Aqui você pode acompanhar os relatórios detalhados sobre as doações recebidas
                            e o trabalho dos voluntários em nossa plataforma.
                        </p>
                        <div class="row mt-4">
                            <div class="col-md-6 mb-4">
                                <div class="card bg-dark text-light border-0 shadow">
                                    <div class="card-body">
                                        <h3>Relatório de Recursos</h3>
                                        <p>Acompanhe as doações recebidas e sua distribuição.</p>
                                        <a href="/Relatorio/GerarExcel" class="btn btn-outline-light">
                                            <i class="fas fa-file-excel me-2"></i>Baixar Relatório Excel
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="card bg-dark text-light border-0 shadow">
                                    <div class="card-body">
                                        <h3>Relatório de Voluntários</h3>
                                        <p>Veja as estatísticas de voluntários e suas atividades.</p>
                                        <a href="#" class="btn btn-outline-light">
                                            <i class="fas fa-users me-2"></i>Ver Detalhes
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 